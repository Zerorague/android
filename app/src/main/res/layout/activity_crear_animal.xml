<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCrearAnimal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".CrearAnimalActivity">

    <TextView
        android:id="@+id/crearAnimalTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TemaTextViews"
        android:text="@string/agregarAnimal"/>

    <EditText
        android:id="@+id/chipAnimal"
        style="@style/TemaEditTexts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/chipAnimalHint" />

    <EditText
        android:id="@+id/nombreAnimal"
        style="@style/TemaEditTexts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/nombreAnimalHint" />

    <EditText
        android:id="@+id/nombreDuenoAnimal"
        style="@style/TemaEditTexts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/nombreDuenoAnimalHint" />

    <EditText
        android:id="@+id/razaAnimal"
        style="@style/TemaEditTexts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/raza_animal_hint" />

    <Button
        android:id="@+id/btnCreaAnimal"
        style="@style/TemaBotones"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:text="@string/btnCreaAnimal" />
</LinearLayout>